    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationBottomFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
